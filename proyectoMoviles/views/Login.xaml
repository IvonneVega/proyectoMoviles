<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="proyectoMoviles.views.Login" NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <StackLayout.Padding>
                <OnPlatform x:TypeArguments="Thickness"
                  iOS="40,40,40,40"
                  Android="40,40,40,40" />
            </StackLayout.Padding>
            <Image Source="login.png"></Image>
            <Entry x:Name="txtUsuario" Placeholder="Usuario" />
            <Entry x:Name="txtContrasena" Placeholder="Contraseña" IsPassword="True" />
            <Button x:Name="btnIngresar" Text="Ingresar" Clicked="btnIngresar_Clicked"/>
            <Button x:Name="btnRegistro" Text="Registrarse" Clicked="btnRegistro_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>